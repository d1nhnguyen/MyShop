<?xml version="1.0" encoding="utf-8"?>
<ContentDialog
    x:Class="MyShop.App.Views.Dialogs.OrderDetailDialog"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:models="using:MyShop.Core.Models"
    Title="Order Details"
    CloseButtonText="Close"
    DefaultButton="Close">

    <ScrollViewer MaxHeight="700">
        <StackPanel Spacing="20" Padding="4">
            <!-- Order Header -->
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <StackPanel>
                    <TextBlock x:Name="OrderNumberText" FontSize="24" FontWeight="Bold"/>
                    <TextBlock x:Name="OrderDateText" FontSize="12"
                               Foreground="{ThemeResource SystemControlForegroundBaseMediumBrush}"
                               Margin="0,4,0,0"/>
                </StackPanel>

                <Border Grid.Column="1" x:Name="StatusBorder"
                        CornerRadius="12" Padding="16,6"
                        Background="{ThemeResource SystemFillColorAttentionBackgroundBrush}">
                    <TextBlock x:Name="StatusText" FontWeight="SemiBold"/>
                </Border>
            </Grid>

            <!-- Customer Information -->
            <Border BorderBrush="{ThemeResource DividerStrokeColorDefaultBrush}"
                    BorderThickness="1"
                    CornerRadius="8"
                    Padding="16"
                    Background="{ThemeResource LayerFillColorDefaultBrush}">
                <StackPanel Spacing="12">
                    <TextBlock Text="Customer Information" FontWeight="Bold" FontSize="16"/>

                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="120"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>

                        <TextBlock Grid.Row="0" Grid.Column="0" Text="Name:"
                                   Foreground="{ThemeResource SystemControlForegroundBaseMediumBrush}"/>
                        <TextBlock Grid.Row="0" Grid.Column="1" x:Name="CustomerNameText" FontWeight="SemiBold"/>

                        <TextBlock Grid.Row="1" Grid.Column="0" Text="Phone:" Margin="0,8,0,0"
                                   Foreground="{ThemeResource SystemControlForegroundBaseMediumBrush}"/>
                        <TextBlock Grid.Row="1" Grid.Column="1" x:Name="CustomerPhoneText" Margin="0,8,0,0"/>

                        <TextBlock Grid.Row="2" Grid.Column="0" Text="Email:" Margin="0,8,0,0"
                                   Foreground="{ThemeResource SystemControlForegroundBaseMediumBrush}"/>
                        <TextBlock Grid.Row="2" Grid.Column="1" x:Name="CustomerEmailText" Margin="0,8,0,0"/>
                    </Grid>
                </StackPanel>
            </Border>

            <!-- Order Items -->
            <Border BorderBrush="{ThemeResource DividerStrokeColorDefaultBrush}"
                    BorderThickness="1"
                    CornerRadius="8"
                    Padding="16"
                    Background="{ThemeResource LayerFillColorDefaultBrush}">
                <StackPanel Spacing="12">
                    <TextBlock Text="Order Items" FontWeight="Bold" FontSize="16"/>

                    <ListView x:Name="OrderItemsList"
                              SelectionMode="None"
                              MaxHeight="300">
                        <ListView.ItemTemplate>
                            <DataTemplate x:DataType="models:OrderItem">
                                <Grid Padding="12"
                                      Background="{ThemeResource CardBackgroundFillColorDefaultBrush}"
                                      CornerRadius="4"
                                      Margin="0,0,0,8">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="80"/>
                                        <ColumnDefinition Width="100"/>
                                        <ColumnDefinition Width="100"/>
                                    </Grid.ColumnDefinitions>

                                    <StackPanel Grid.Column="0">
                                        <TextBlock Text="{x:Bind Product.Name}" FontWeight="SemiBold"/>
                                        <TextBlock Text="{x:Bind Product.Sku}" FontSize="11"
                                                   Foreground="{ThemeResource SystemControlForegroundBaseMediumBrush}"/>
                                    </StackPanel>

                                    <StackPanel Grid.Column="1" HorizontalAlignment="Center" VerticalAlignment="Center">
                                        <TextBlock Text="Qty" FontSize="11"
                                                   Foreground="{ThemeResource SystemControlForegroundBaseMediumBrush}"/>
                                        <TextBlock Text="{x:Bind Quantity}" FontWeight="Bold" HorizontalAlignment="Center"/>
                                    </StackPanel>

                                    <StackPanel Grid.Column="2" HorizontalAlignment="Right" VerticalAlignment="Center">
                                        <TextBlock Text="Unit Price" FontSize="11"
                                                   Foreground="{ThemeResource SystemControlForegroundBaseMediumBrush}"/>
                                        <TextBlock FontWeight="SemiBold">
                                            <Run Text="$"/>
                                            <Run Text="{x:Bind UnitPrice}"/>
                                        </TextBlock>
                                    </StackPanel>

                                    <StackPanel Grid.Column="3" HorizontalAlignment="Right" VerticalAlignment="Center">
                                        <TextBlock Text="Total" FontSize="11"
                                                   Foreground="{ThemeResource SystemControlForegroundBaseMediumBrush}"/>
                                        <TextBlock FontWeight="Bold">
                                            <Run Text="$"/>
                                            <Run Text="{x:Bind Total}"/>
                                        </TextBlock>
                                    </StackPanel>
                                </Grid>
                            </DataTemplate>
                        </ListView.ItemTemplate>
                    </ListView>
                </StackPanel>
            </Border>

            <!-- Order Summary -->
            <Border BorderBrush="{ThemeResource DividerStrokeColorDefaultBrush}"
                    BorderThickness="1"
                    CornerRadius="8"
                    Padding="16"
                    Background="{ThemeResource LayerFillColorDefaultBrush}">
                <StackPanel Spacing="12">
                    <TextBlock Text="Order Summary" FontWeight="Bold" FontSize="16"/>

                    <Grid>
                        <TextBlock Text="Subtotal:"/>
                        <TextBlock x:Name="SubtotalText" HorizontalAlignment="Right" FontWeight="SemiBold"/>
                    </Grid>

                    <Grid>
                        <TextBlock Text="Discount:"/>
                        <TextBlock x:Name="DiscountText" HorizontalAlignment="Right"
                                   Foreground="{ThemeResource SystemAccentColor}" FontWeight="SemiBold"/>
                    </Grid>

                    <Grid>
                        <TextBlock Text="Tax:"/>
                        <TextBlock x:Name="TaxText" HorizontalAlignment="Right" FontWeight="SemiBold"/>
                    </Grid>

                    <Border BorderBrush="{ThemeResource DividerStrokeColorDefaultBrush}"
                            BorderThickness="0,1,0,0"
                            Padding="0,12,0,0">
                        <Grid>
                            <TextBlock Text="Total:" FontWeight="Bold" FontSize="18"/>
                            <TextBlock x:Name="TotalText" HorizontalAlignment="Right"
                                       FontWeight="Bold" FontSize="20"
                                       Foreground="{ThemeResource SystemAccentColor}"/>
                        </Grid>
                    </Border>
                </StackPanel>
            </Border>

            <!-- Notes -->
            <Border BorderBrush="{ThemeResource DividerStrokeColorDefaultBrush}"
                    BorderThickness="1"
                    CornerRadius="8"
                    Padding="16"
                    Background="{ThemeResource LayerFillColorDefaultBrush}"
                    Visibility="{x:Bind NotesText.Text, Mode=OneWay, Converter={StaticResource InvertedBoolToVisibilityConverter}}">
                <StackPanel Spacing="8">
                    <TextBlock Text="Notes" FontWeight="Bold" FontSize="14"/>
                    <TextBlock x:Name="NotesText" TextWrapping="Wrap"/>
                </StackPanel>
            </Border>

            <!-- Metadata -->
            <StackPanel Spacing="4">
                <TextBlock FontSize="11"
                           Foreground="{ThemeResource SystemControlForegroundBaseMediumBrush}">
                    <Run Text="Created by:"/>
                    <Run x:Name="CreatedByText" FontWeight="SemiBold"/>
                </TextBlock>
                <TextBlock FontSize="11"
                           Foreground="{ThemeResource SystemControlForegroundBaseMediumBrush}">
                    <Run Text="Created at:"/>
                    <Run x:Name="CreatedAtText"/>
                </TextBlock>
                <TextBlock x:Name="CompletedAtTextBlock" FontSize="11"
                           Foreground="{ThemeResource SystemControlForegroundBaseMediumBrush}">
                    <Run Text="Completed at:"/>
                    <Run x:Name="CompletedAtText"/>
                </TextBlock>
            </StackPanel>
        </StackPanel>
    </ScrollViewer>
</ContentDialog>
