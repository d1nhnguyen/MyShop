<Page
    x:Class="MyShop.App.Views.OrdersPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:models="using:MyShop.Core.Models"
    xmlns:vm="using:MyShop.App.ViewModels"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">

    <Grid Padding="24">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <StackPanel Grid.Row="0" Margin="0,0,0,20">
            <TextBlock Text="Orders Management" FontSize="24" FontWeight="Bold"/>
            <TextBlock Text="Home > Orders" Foreground="{ThemeResource SystemControlForegroundBaseMediumBrush}" FontSize="12" Margin="0,4,0,0"/>
        </StackPanel>

        <!-- Search and Add Button -->
        <Grid Grid.Row="1" Margin="0,0,0,20">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>

            <AutoSuggestBox PlaceholderText="Search orders..." Width="250" QueryIcon="Find"
                            QuerySubmitted="OnSearchQuerySubmitted"/>

            <Button Grid.Column="2" Content="âž• CREATE NEW ORDER" Click="OnAddOrderClick"
                    Style="{StaticResource AccentButtonStyle}" CornerRadius="4"/>
        </Grid>

        <!-- Filters -->
        <Grid Grid.Row="2" Margin="0,0,0,16">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>

            <StackPanel Grid.Column="0" Orientation="Horizontal" Spacing="12">
                <TextBlock Text="Filter by:" VerticalAlignment="Bottom" FontWeight="SemiBold" Margin="0,0,0,8"/>

                <StackPanel>
                    <TextBlock Text="Status" FontSize="12" Margin="0,0,0,4"/>
                    <ComboBox x:Name="StatusFilterComboBox" PlaceholderText="All Status" Width="150"
                              SelectionChanged="OnStatusFilterChanged">
                        <ComboBoxItem Content="All" Tag=""/>
                        <ComboBoxItem Content="Pending" Tag="PENDING"/>
                        <ComboBoxItem Content="Processing" Tag="PROCESSING"/>
                        <ComboBoxItem Content="Completed" Tag="COMPLETED"/>
                        <ComboBoxItem Content="Cancelled" Tag="CANCELLED"/>
                    </ComboBox>
                </StackPanel>

                <StackPanel>
                    <TextBlock Text="From Date" FontSize="12" Margin="0,0,0,4"/>
                    <CalendarDatePicker x:Name="StartDatePicker"
                                        Width="160"
                                        PlaceholderText="dd/MM/yyyy"
                                        DateFormat="{}{day.integer(2)}/{month.integer(2)}/{year.full}"
                                        DateChanged="OnStartDateChanged"/>
                </StackPanel>

                <StackPanel>
                    <TextBlock Text="To Date" FontSize="12" Margin="0,0,0,4"/>
                    <CalendarDatePicker x:Name="EndDatePicker"
                                        Width="160"
                                        PlaceholderText="dd/MM/yyyy"
                                        DateFormat="{}{day.integer(2)}/{month.integer(2)}/{year.full}"
                                        DateChanged="OnEndDateChanged"/>
                </StackPanel>
            </StackPanel>

            <Button Grid.Column="2"
                    Content="Clear Filters"
                    Click="OnClearFiltersClick"
                    VerticalAlignment="Bottom"
                    Margin="0,0,0,4"/>
        </Grid>

        <!-- Orders List -->
        <ScrollViewer Grid.Row="3">
            <StackPanel Spacing="12">
                <ListView ItemsSource="{x:Bind ViewModel.Orders, Mode=OneWay}"
                          SelectionMode="None"
                          IsItemClickEnabled="False">
                    <ListView.ItemContainerStyle>
                        <Style TargetType="ListViewItem">
                            <Setter Property="HorizontalContentAlignment" Value="Stretch"/>
                            <Setter Property="Padding" Value="0"/>
                            <Setter Property="Margin" Value="0,0,0,8"/>
                        </Style>
                    </ListView.ItemContainerStyle>
                    <ListView.ItemTemplate>
                        <DataTemplate x:DataType="models:Order">
                            <Grid Background="{ThemeResource LayerFillColorDefaultBrush}"
                                  CornerRadius="8"
                                  Padding="20"
                                  BorderBrush="{ThemeResource DividerStrokeColorDefaultBrush}"
                                  BorderThickness="1">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="150"/>
                                    <ColumnDefinition Width="200"/>
                                    <ColumnDefinition Width="150"/>
                                    <ColumnDefinition Width="150"/>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="Auto"/>
                                </Grid.ColumnDefinitions>

                                <!-- Order Number -->
                                <StackPanel Grid.Column="0">
                                    <TextBlock Text="Order Number" FontSize="11"
                                               Foreground="{ThemeResource SystemControlForegroundBaseMediumBrush}"/>
                                    <TextBlock Text="{x:Bind OrderNumber}" FontWeight="Bold" Margin="0,4,0,0"/>
                                </StackPanel>

                                <!-- Customer -->
                                <StackPanel Grid.Column="1" Margin="16,0,0,0">
                                    <TextBlock Text="Customer" FontSize="11"
                                               Foreground="{ThemeResource SystemControlForegroundBaseMediumBrush}"/>
                                    <TextBlock FontWeight="SemiBold" Margin="0,4,0,0">
                                        <Run Text="{x:Bind Customer.Name}"/>
                                    </TextBlock>
                                    <TextBlock Text="{x:Bind Customer.Phone}" FontSize="11"
                                               Foreground="{ThemeResource SystemControlForegroundBaseMediumBrush}"/>
                                </StackPanel>

                                <!-- Date -->
                                <StackPanel Grid.Column="2" Margin="16,0,0,0">
                                    <TextBlock Text="Date" FontSize="11"
                                               Foreground="{ThemeResource SystemControlForegroundBaseMediumBrush}"/>
                                    <TextBlock Text="{x:Bind FormattedDate}" FontWeight="SemiBold" Margin="0,4,0,0"/>
                                    <TextBlock Text="{x:Bind FormattedTime}" FontSize="11"
                                               Foreground="{ThemeResource SystemControlForegroundBaseMediumBrush}"/>
                                </StackPanel>

                                <!-- Total -->
                                <StackPanel Grid.Column="3" Margin="16,0,0,0">
                                    <TextBlock Text="Total" FontSize="11"
                                               Foreground="{ThemeResource SystemControlForegroundBaseMediumBrush}"/>
                                    <TextBlock FontWeight="Bold" FontSize="16" Margin="0,4,0,0"
                                               Foreground="{ThemeResource SystemAccentColor}">
                                        <Run Text="$"/>
                                        <Run Text="{x:Bind Total}"/>
                                    </TextBlock>
                                </StackPanel>

                                <!-- Status -->
                                <StackPanel Grid.Column="4" Margin="16,0,0,0" HorizontalAlignment="Left">
                                    <TextBlock Text="Status" FontSize="11"
                                               Foreground="{ThemeResource SystemControlForegroundBaseMediumBrush}"/>
                                    <Border CornerRadius="12" Padding="12,4" Margin="0,4,0,0"
                                            Background="{ThemeResource SystemFillColorAttentionBackgroundBrush}">
                                        <TextBlock Text="{x:Bind Status}" FontWeight="SemiBold" FontSize="11"/>
                                    </Border>
                                </StackPanel>

                                <!-- Actions -->
                                <StackPanel Grid.Column="5" Orientation="Horizontal" Spacing="4"
                                            VerticalAlignment="Center">
                                    <Button Background="Transparent" BorderThickness="0" Padding="8"
                                            Click="OnViewOrderClick" Tag="{x:Bind}"
                                            ToolTipService.ToolTip="View Details">
                                        <FontIcon Glyph="&#xE8A3;" FontSize="16"/>
                                    </Button>
                                    <Button Background="Transparent" BorderThickness="0" Padding="8"
                                            Click="OnEditOrderClick" Tag="{x:Bind}"
                                            ToolTipService.ToolTip="Edit Order">
                                        <FontIcon Glyph="&#xE70F;" FontSize="16"/>
                                    </Button>
                                    <Button Background="Transparent" BorderThickness="0" Padding="8"
                                            Click="OnCancelOrderClick" Tag="{x:Bind}"
                                            ToolTipService.ToolTip="Cancel Order">
                                        <FontIcon Glyph="&#xE711;" FontSize="16" Foreground="#FF5555"/>
                                    </Button>
                                </StackPanel>
                            </Grid>
                        </DataTemplate>
                    </ListView.ItemTemplate>
                </ListView>

                <!-- Empty State -->
                <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center"
                            Visibility="{x:Bind ViewModel.Orders.Count, Mode=OneWay, Converter={StaticResource InvertedBoolToVisibilityConverter}}">
                    <FontIcon Glyph="&#xE7C0;" FontSize="64"
                              Foreground="{ThemeResource SystemControlForegroundBaseMediumBrush}"/>
                    <TextBlock Text="No orders found" FontSize="18" Margin="0,16,0,0"
                               Foreground="{ThemeResource SystemControlForegroundBaseMediumBrush}"/>
                    <TextBlock Text="Create your first order to get started" FontSize="14" Margin="0,8,0,0"
                               Foreground="{ThemeResource SystemControlForegroundBaseMediumBrush}"/>
                </StackPanel>
            </StackPanel>
        </ScrollViewer>

        <!-- Pagination -->
        <Grid Grid.Row="4" Margin="0,16,0,0" Padding="16"
              Background="{ThemeResource LayerFillColorDefaultBrush}"
              CornerRadius="8"
              BorderBrush="{ThemeResource DividerStrokeColorDefaultBrush}"
              BorderThickness="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <TextBlock Grid.Column="0" VerticalAlignment="Center">
                <Run Text="Showing"/>
                <Run Text="{x:Bind ViewModel.Orders.Count, Mode=OneWay}" FontWeight="Bold"/>
                <Run Text="of"/>
                <Run Text="{x:Bind ViewModel.TotalOrders, Mode=OneWay}" FontWeight="Bold"/>
                <Run Text="orders"/>
            </TextBlock>

            <StackPanel Grid.Column="1" Orientation="Horizontal" Spacing="8">
                <Button Click="OnFirstPageClick"
                        IsEnabled="{x:Bind ViewModel.HasPreviousPage, Mode=OneWay}"
                        ToolTipService.ToolTip="First Page">
                    <FontIcon Glyph="&#xE892;" FontSize="12"/>
                </Button>
                <Button Click="OnPreviousPageClick"
                        IsEnabled="{x:Bind ViewModel.HasPreviousPage, Mode=OneWay}"
                        ToolTipService.ToolTip="Previous Page">
                    <FontIcon Glyph="&#xE76B;" FontSize="12"/>
                </Button>
                <TextBlock VerticalAlignment="Center" Margin="8,0">
                    <Run Text="Page"/>
                    <Run Text="{x:Bind ViewModel.CurrentPage, Mode=OneWay}" FontWeight="Bold"/>
                    <Run Text="of"/>
                    <Run Text="{x:Bind ViewModel.TotalPages, Mode=OneWay}" FontWeight="Bold"/>
                </TextBlock>
                <Button Click="OnNextPageClick"
                        IsEnabled="{x:Bind ViewModel.HasNextPage, Mode=OneWay}"
                        ToolTipService.ToolTip="Next Page">
                    <FontIcon Glyph="&#xE76C;" FontSize="12"/>
                </Button>
                <Button Click="OnLastPageClick"
                        IsEnabled="{x:Bind ViewModel.HasNextPage, Mode=OneWay}"
                        ToolTipService.ToolTip="Last Page">
                    <FontIcon Glyph="&#xE893;" FontSize="12"/>
                </Button>
            </StackPanel>
        </Grid>

        <!-- Loading Indicator -->
        <Grid Grid.RowSpan="5" Background="{ThemeResource SystemControlAcrylicWindowBrush}"
              Visibility="{x:Bind ViewModel.IsBusy, Mode=OneWay, Converter={StaticResource BoolToVisibilityConverter}}">
            <ProgressRing IsActive="{x:Bind ViewModel.IsBusy, Mode=OneWay}" Width="60" Height="60"/>
        </Grid>
    </Grid>
</Page>
